{
    "compileOnSave": false,
    "compilerOptions": {
        "downlevelIteration": true,
        "importHelpers": true,
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "module": "esnext",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "lib": [
            "es2018",
            "es2017",
            "es2016",
            "es2015",
            "dom"
        ],
        "strict": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true
    },
    "include": [
        "main.ts",
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
