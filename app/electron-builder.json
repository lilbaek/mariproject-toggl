{
    "productName": "MARIProject integration",
    "directories": {
        "output": "release/"
    },
    "publish": [
        {
            "provider": "github",
            "owner": "lilbaek",
            "repo": "mariproject-toggl"
        }
    ],
    "files": [
        "**/*",
        "!**/*.ts",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!src/",
        "!e2e/",
        "!hooks/",
        "!angular.json",
        "!_config.yml",
        "!karma.conf.js",
        "!tsconfig.json",
        "!tslint.json"
    ],
    "win": {
        "icon": "dist"
    },
    "mac": {
        "icon": "dist",
        "target": [
            "dmg"
        ]
    },
    "linux": {
        "icon": "dist",
        "target": [
            "AppImage"
        ]
    }
}
